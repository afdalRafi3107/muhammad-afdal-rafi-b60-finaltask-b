{{#> layout currentPage='Login'}}


    <!-- content -->
    <div class="container-md container-input" style="text-align: center;">
        {{#if messages.success}}
        <div class="alert alert-success" role="alert">
        {{ messages.success }}
        </div>
        {{/if }}
        <h1>Login</h1>
        <form id="login" class="auth"  method="post">
        <div class="input-group mb-3">
         <input name="email" type="email" class="form-control" placeholder="Email" aria-label="Recipient's username" aria-describedby="basic-addon2">
        </div>
        <div class="input-group mb-3">
         <input name="password" type="password" class="form-control" placeholder="password" aria-label="Recipient's username" aria-describedby="basic-addon2">
        </div>
        <div class="input-group mb-3" >
        <button class="btn btn-success" style="width: 100%;" type="submit">Login</button>
        </div>
        </form>
        <p>Belum punya akun? <a href="/register">daftar disini</a></p>
    </div>
 {{/layout }}